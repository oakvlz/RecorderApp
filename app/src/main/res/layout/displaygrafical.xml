<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/fragment_appgrafica_bg"
  xmlns:tools="http://schemas.android.com/tools"
  tools:context=".appgraficas.PrincipalFragment">
    <TextView android:id="@+id/txtTitulo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/_5sdp"
      android:text="Good morning!"
      android:textColor="@color/white"
      android:textSize="15sp"
      android:textStyle="bold"
      android:layout_marginTop="@dimen/_15sdp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
    <ImageView
      android:id="@+id/fABNotify"
      android:layout_width="@dimen/_25sdp"
      android:layout_height="@dimen/_25sdp"
      android:backgroundTint="@color/fragment_appgrafica_card"
      android:clickable="true"
      app:srcCompat="@drawable/bell_notifications"
      android:layout_marginTop="@dimen/_15sdp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rvRoundBottons"
      android:layout_width="match_parent"
      android:layout_height="@dimen/_30sdp"
      android:layout_marginTop="@dimen/_10sdp"
      android:layout_marginStart="@dimen/_5sdp"
      android:layout_marginEnd="@dimen/_5sdp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txtTitulo"
      tools:listitem="@layout/btn_menu"/>
    <androidx.cardview.widget.CardView
      android:id="@+id/cVWheater"
      android:layout_width="match_parent"
      android:layout_height="@dimen/_200sdp"
      android:layout_marginStart="@dimen/_5sdp"
      android:layout_marginEnd="@dimen/_5sdp"
      android:backgroundTint="@color/fragment_appgrafica_card"
      app:cardCornerRadius="@dimen/_10sdp"
      app:cardElevation="@dimen/_10sdp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/rvRoundBottons">
        <androidx.coordinatorlayout.widget.CoordinatorLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_margin="@dimen/_10sdp">
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:weightSum="3">
                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="Weather"
                  android:textColor="@color/white"/>
                <ImageView
                  android:layout_width="@dimen/_30sdp"
                  android:layout_height="@dimen/_30sdp"
                  android:layout_weight="1"
                  android:src="@drawable/nubes"/>
                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="+25`C"
                  android:textSize="@dimen/_18ssp"
                  android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/_50sdp"
              android:orientation="horizontal"
              android:weightSum="3">
                <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_weight="1">
                    <ImageView
                      android:layout_width="@dimen/_20sdp"
                      android:layout_height="@dimen/_20sdp"
                      android:src="@drawable/ic_temperature"
                      app:tint="@color/white"/>
                    <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="+25`C"
                      android:textSize="@dimen/_10ssp"
                      android:textColor="@color/white"/>
                    <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="Sail Temp"
                      android:textSize="@dimen/_8ssp"
                      android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_weight="1">
                    <ImageView
                      android:layout_width="@dimen/_20sdp"
                      android:layout_height="@dimen/_20sdp"
                      android:src="@drawable/ic_humidity"
                      app:tint="@color/white"/>
                    <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="+59`C"
                      android:textSize="@dimen/_10ssp"
                      android:textColor="@color/white"/>
                    <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="Humidity"
                      android:textSize="@dimen/_8ssp"
                      android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_weight="1">
                    <ImageView
                      android:layout_width="@dimen/_20sdp"
                      android:layout_height="@dimen/_20sdp"
                      android:src="@drawable/ic_windblow"
                      app:tint="@color/white"/>
                    <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="6 m/s"
                      android:textSize="@dimen/_10ssp"
                      android:textColor="@color/white"/>
                    <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="Wind"
                      android:textSize="@dimen/_8ssp"
                      android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_weight="1">
                    <ImageView
                      android:layout_width="@dimen/_20sdp"
                      android:layout_height="@dimen/_20sdp"
                      android:src="@drawable/ic_storm"
                      app:tint="@color/white"/>
                    <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="0 mm"
                      android:textSize="@dimen/_10ssp"
                      android:textColor="@color/white"/>
                    <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="Sail Temp"
                      android:textSize="@dimen/_8ssp"
                      android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginTop="@dimen/_110sdp"
              android:weightSum="3">
                <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_weight="1">
                    <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="5:25 am"
                      android:textColor="@color/white"
                      android:textSize="@dimen/_12sdp"/>
                    <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Sunrise"
                      android:textColor="@color/white"
                      android:textSize="@dimen/_10sdp"/>
                </LinearLayout>
                <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:src="@drawable/amanecer"
                  android:layout_weight="1"/>
                <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_weight="1">
                    <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="8:04 pm"
                      android:textColor="@color/white"
                      android:textSize="@dimen/_12sdp"/>
                    <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Sunset"
                      android:textColor="@color/white"
                      android:textSize="@dimen/_10sdp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
      android:id="@+id/cVWheaterGrafical"
      android:layout_width="match_parent"
      android:layout_height="@dimen/_200sdp"
      android:layout_marginStart="@dimen/_5sdp"
      android:layout_marginEnd="@dimen/_5sdp"
      android:backgroundTint="@color/fragment_appgrafica_card"
      app:cardCornerRadius="@dimen/_10sdp"
      app:cardElevation="@dimen/_10sdp"
      app:layout_constraintBottom_toTopOf="@+id/llMenu"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/cVWheater">
        <androidx.coordinatorlayout.widget.CoordinatorLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/_10sdp"
              android:orientation="horizontal"
              android:weightSum="2">
                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Sail Moisture"
                  android:layout_weight="1"
                  android:textColor="@color/white"/>
                <androidx.cardview.widget.CardView
                  android:layout_width="@dimen/_30sdp"
                  android:layout_height="@dimen/_40sdp"
                  android:layout_weight="1"
                  android:backgroundTint="@color/fragment_appgrafica_subcard"
                  app:cardCornerRadius="@dimen/_10sdp"
                  app:cardElevation="@dimen/_10sdp">
                    <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="horizontal"
                      android:layout_margin="@dimen/_10sdp"
                      android:weightSum="2">
                        <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Today"
                          android:layout_weight="1"
                          app:tint="@color/fragment_appgrafica_submenu_text" />
                        <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/ic_calendar"
                          app:tint="@color/white"
                          android:layout_weight="1" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginStart="@dimen/_15sdp"
              android:layout_marginEnd="@dimen/_10sdp"
              android:layout_marginTop="@dimen/_60sdp"
              android:weightSum="3">
               <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="12 Fields"
                 android:textSize="@dimen/_8ssp"
                 android:textColor="@color/white"
                 android:layout_weight="1"/>
                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="12 Fields"
                  android:textSize="@dimen/_8ssp"
                  android:textColor="@color/white"
                  android:layout_weight="1"/>
                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="12 Fields"
                  android:textSize="@dimen/_8ssp"
                  android:textColor="@color/white"
                  android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center">
                <ImageView
                  android:layout_width="@dimen/_220sdp"
                  android:layout_height="@dimen/_90sdp"
                  android:layout_marginTop="@dimen/_40sdp"
                  android:layout_marginStart="@dimen/_20sdp"
                  android:src="@drawable/tresgraficas" />
            </LinearLayout>
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginStart="@dimen/_15sdp"
              android:layout_marginEnd="@dimen/_10sdp"
              android:layout_marginTop="@dimen/_170sdp"
              android:weightSum="3">
                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Low"
                  android:textSize="@dimen/_8ssp"
                  android:textColor="@color/white"
                  android:layout_weight="1"/>
                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Optimal"
                  android:textSize="@dimen/_8ssp"
                  android:textColor="@color/white"
                  android:layout_weight="1"/>
                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="High"
                  android:textSize="@dimen/_8ssp"
                  android:textColor="@color/white"
                  android:layout_weight="1"/>
            </LinearLayout>


        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
      android:id="@+id/llMenu"
      style="@style/cardBarLinear"
      android:weightSum="4"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">
        <ImageView
          android:id="@+id/btnHome"
          android:layout_width="@dimen/_25sdp"
          android:layout_height="@dimen/_25sdp"
          android:layout_weight="1"
          android:layout_gravity="center"
          app:tint="@color/fragment_appgrafica_menu_select"
          android:src="@drawable/ic_house" />
        <ImageView
          android:id="@+id/btnCalendar"
          android:layout_width="@dimen/_25sdp"
          android:layout_height="@dimen/_25sdp"
          android:layout_weight="1"
          android:layout_gravity="center"
          app:tint="@color/fragment_appgrafica_menu"
          android:src="@drawable/ic_calendar" />
        <ImageView
          android:id="@+id/btnUser"
          android:layout_width="@dimen/_25sdp"
          android:layout_height="@dimen/_25sdp"
          android:layout_weight="1"
          android:layout_gravity="center"
          app:tint="@color/fragment_appgrafica_menu"
          android:src="@drawable/ic_place" />
        <ImageView
          android:id="@+id/btnSettings"
          android:layout_width="@dimen/_25sdp"
          android:layout_height="@dimen/_25sdp"
          android:layout_weight="1"
          android:layout_gravity="center"
          app:tint="@color/fragment_appgrafica_menu"
          android:src="@drawable/ic_settings_b" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>