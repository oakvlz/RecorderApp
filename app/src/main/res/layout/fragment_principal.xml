<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/fragment_appgrafica_bg"
xmlns:tools="http://schemas.android.com/tools"
tools:context=".appgraficas.PrincipalFragment">

  <TextView android:id="@+id/txtTitulo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_5sdp"
    android:text="Good morning!"
    android:textColor="@color/white"
    android:textSize="15sp"
    android:textStyle="bold"
    android:layout_marginTop="@dimen/_15sdp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />
  <ImageView
    android:id="@+id/fABNotify"
    android:layout_width="@dimen/_25sdp"
    android:layout_height="@dimen/_25sdp"
    android:backgroundTint="@color/fragment_appgrafica_card"
    android:clickable="true"
    app:srcCompat="@drawable/bell_notifications"
    android:layout_marginTop="@dimen/_15sdp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent" />
  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/rvRoundBottons"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_30sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/txtTitulo"
    tools:listitem="@layout/btn_menu"/>
    <LinearLayout
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:weightSum="2"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/rvRoundBottons">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:textSize="@dimen/_8ssp"
        android:paddingEnd="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingTop="@dimen/_5sdp"
        android:text=" Sensors" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="end"
        android:textColor="@color/white"
        android:textSize="@dimen/_8ssp"
        android:paddingStart="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingTop="@dimen/_5sdp"
        android:text=" All Sensors" />
</LinearLayout>
  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/rcSensor"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_55sdp"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
    tools:listitem="@layout/card_sensors"/>
<androidx.cardview.widget.CardView
  android:layout_width="match_parent"
  android:layout_height="@dimen/_350sdp"
  android:layout_marginTop="@dimen/_5sdp"
  android:layout_marginStart="@dimen/_5sdp"
  android:layout_marginEnd="@dimen/_5sdp"
  android:layout_marginBottom="@dimen/_5sdp"
  app:cardElevation="@dimen/_10sdp"
  app:cardCornerRadius="@dimen/_10sdp"
  android:backgroundTint="@color/fragment_appgrafica_card"
  app:layout_constraintEnd_toEndOf="parent"
  app:layout_constraintStart_toStartOf="parent"
  app:layout_constraintTop_toBottomOf="@+id/rcSensor"
  app:layout_constraintBottom_toTopOf="@+id/llMenu">
  <androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
      android:layout_width="@dimen/_200sdp"
      android:layout_height="@dimen/_200sdp"
      android:layout_gravity="center"
      android:layout_marginBottom="@dimen/_20sdp"
      android:src="@drawable/grafica"/>
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="top|start"
      android:layout_marginTop="@dimen/_20sdp"
      android:layout_marginStart="@dimen/_18sdp"
      android:text="Filed Water"
      android:textColor="@color/white"
      android:textSize="15sp"
      android:textStyle="bold"/>
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="start"
      android:layout_marginTop="@dimen/_70sdp"
      android:layout_marginStart="@dimen/_18sdp"
      android:text="22.5%"
      android:textColor="@color/white"
      android:textSize="15sp"
      android:textStyle="bold" />
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom"
      android:layout_marginBottom="@dimen/_100sdp"
      android:layout_marginStart="@dimen/_18sdp"
      android:text="22.5%"
      android:textColor="@color/white"
      android:textSize="15sp"
      android:textStyle="bold" />
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="end"
      android:layout_marginTop="@dimen/_70sdp"
      android:layout_marginEnd="@dimen/_18sdp"
      android:text="22.5%"
      android:textColor="@color/white"
      android:textSize="15sp"
      android:textStyle="bold" />
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="end|bottom"
      android:layout_marginEnd="@dimen/_18sdp"
      android:layout_marginBottom="@dimen/_100sdp"
      android:text="22.5%"
      android:textColor="@color/white"
      android:textSize="15sp"
      android:textStyle="bold" />
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom"
      android:layout_margin="@dimen/_20sdp"
      android:orientation="horizontal"
      android:weightSum="2">
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <ImageView
            android:layout_width="@dimen/_5sdp"
            android:layout_height="@dimen/_5sdp"
            android:layout_gravity="center"
            android:background="@color/fragment_appgrafica_grafica_01"/>
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="Optional"
            android:textColor="@color/white"
            android:textSize="@dimen/_8ssp" />
        </LinearLayout>
        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <ImageView
            android:layout_width="@dimen/_5sdp"
            android:layout_height="@dimen/_5sdp"
            android:layout_gravity="center"
            android:background="@color/fragment_appgrafica_grafica_03"/>
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:text=" Serius Attention"
            android:textColor="@color/white"
            android:textSize="@dimen/_8ssp" />
        </LinearLayout>
      </LinearLayout>
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <ImageView
            android:layout_width="@dimen/_5sdp"
            android:layout_height="@dimen/_5sdp"
            android:layout_gravity="center"
            android:background="@color/fragment_appgrafica_grafica_02"/>
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="N/A"
            android:textColor="@color/white"
            android:textSize="@dimen/_8ssp" />
        </LinearLayout>
        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <ImageView
            android:layout_width="@dimen/_5sdp"
            android:layout_height="@dimen/_5sdp"
            android:layout_gravity="center"
            android:background="@color/fragment_appgrafica_grafica_04"/>
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="SaturedFull"
            android:textColor="@color/white"
            android:textSize="@dimen/_8ssp" />
        </LinearLayout>
      </LinearLayout>


    </LinearLayout>
  </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.cardview.widget.CardView>
<LinearLayout
  android:id="@+id/llMenu"
    style="@style/cardBarLinear"
    android:weightSum="4"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">
    <ImageView
      android:id="@+id/btnHome"
      android:layout_width="@dimen/_25sdp"
      android:layout_height="@dimen/_25sdp"
      android:layout_weight="1"
      android:layout_gravity="center"
      app:tint="@color/fragment_appgrafica_menu_select"
      android:src="@drawable/ic_house" />
    <ImageView
      android:id="@+id/btnCalendar"
      android:layout_width="@dimen/_25sdp"
      android:layout_height="@dimen/_25sdp"
      android:layout_weight="1"
      android:layout_gravity="center"
      app:tint="@color/fragment_appgrafica_menu"
      android:src="@drawable/ic_calendar" />
    <ImageView
      android:id="@+id/btnUser"
      android:layout_width="@dimen/_25sdp"
      android:layout_height="@dimen/_25sdp"
      android:layout_weight="1"
      android:layout_gravity="center"
      app:tint="@color/fragment_appgrafica_menu"
      android:src="@drawable/ic_place" />
    <ImageView
      android:id="@+id/btnSettings"
      android:layout_width="@dimen/_25sdp"
      android:layout_height="@dimen/_25sdp"
      android:layout_weight="1"
      android:layout_gravity="center"
      app:tint="@color/fragment_appgrafica_menu"
      android:src="@drawable/ic_settings_b" />
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>