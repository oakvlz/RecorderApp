<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="@dimen/_5sdp"
android:gravity="top|center"
android:background="@color/fragment_appgrafica_bg"
xmlns:tools="http://schemas.android.com/tools"
tools:context=".appgraficas.GraficalFragment">
  <androidx.cardview.widget.CardView
    android:id="@+id/cVWheater"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10sdp"
    android:backgroundTint="@color/fragment_appgrafica_card"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_10sdp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/_20sdp">
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Weather"
          android:textColor="@color/white"/>
        <ImageView
          android:layout_width="@dimen/_30sdp"
          android:layout_height="@dimen/_30sdp"
          android:layout_weight="1"
          android:src="@drawable/nubes"/>
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="+25`C"
          android:textSize="@dimen/_18ssp"
          android:textColor="@color/white"/>
      </LinearLayout>
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50sdp"
        android:orientation="horizontal"
        android:weightSum="3">
        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_weight="1">
          <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_temperature"
            app:tint="@color/white"/>
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+25`C"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/white"/>
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sail Temp"
            android:textSize="@dimen/_8ssp"
            android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_weight="1">
          <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_humidity"
            app:tint="@color/white"/>
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+59`C"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/white"/>
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Humidity"
            android:textSize="@dimen/_8ssp"
            android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_weight="1">
          <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_windblow"
            app:tint="@color/white"/>
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6 m/s"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/white"/>
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Wind"
            android:textSize="@dimen/_8ssp"
            android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_weight="1">
          <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_storm"
            app:tint="@color/white"/>
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0 mm"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/white"/>
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sail Temp"
            android:textSize="@dimen/_8ssp"
            android:textColor="@color/white"/>
        </LinearLayout>
      </LinearLayout>
      <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_110sdp">
        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:elevation="@dimen/_15sdp">
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5:25 am"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"/>
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sunrise"
            android:textColor="@color/white"
            android:textSize="@dimen/_8ssp"/>
        </LinearLayout>
        <ImageView
          android:layout_width="@dimen/_150sdp"
          android:layout_height="match_parent"
          android:src="@drawable/amanecer"
          android:scaleType="centerInside"
          android:layout_gravity="center"
          android:elevation="@dimen/_5sdp"/>
        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_gravity="end"
          android:elevation="@dimen/_15sdp">
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8:04 pm"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"/>
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sunset"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp"/>
        </LinearLayout>
      </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
  </androidx.cardview.widget.CardView>
  <androidx.cardview.widget.CardView
    android:id="@+id/cVWheaterGrafical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_200sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:backgroundTint="@color/fragment_appgrafica_card"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_10sdp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/cVWheater">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="horizontal">
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/_15sdp"
          android:text="Sail Moisture"
          android:layout_gravity="start|center"
          android:textColor="@color/white"/>
        <androidx.cardview.widget.CardView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/_120sdp"
          android:gravity="center|end"
          android:backgroundTint="@color/fragment_appgrafica_subcard"
          app:cardCornerRadius="@dimen/_10sdp"
          app:cardElevation="@dimen/_10sdp">
          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="horizontal">
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:text="Today"
              app:tint="@color/fragment_appgrafica_submenu_text" />
            <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/_10sdp"
              android:src="@drawable/ic_calendar"
              app:tint="@color/white" />
          </LinearLayout>
        </androidx.cardview.widget.CardView>
      </LinearLayout>
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/_25sdp"
          android:layout_marginTop="@dimen/_60sdp"
          android:layout_marginEnd="@dimen/_10sdp"
          android:orientation="vertical"
          android:weightSum="3">
          <TextView
            style="@style/tvGraficas"
            android:text="12 Fields" />
          <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/graficaroja" />
          <TextView
            style="@style/tvGraficas"
            android:layout_gravity="center"
            android:text="Low" />
        </LinearLayout>
        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/_20sdp"
          android:layout_marginTop="@dimen/_60sdp"
          android:layout_marginEnd="@dimen/_10sdp"
          android:orientation="vertical"
          android:weightSum="3">
          <TextView
            style="@style/tvGraficas"
            android:text="18 Fields" />
          <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/grafocaverde" />
          <TextView
            style="@style/tvGraficas"
            android:layout_gravity="center"
            android:text="Optimal" />
        </LinearLayout>
        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/_20sdp"
          android:layout_marginTop="@dimen/_60sdp"
          android:orientation="vertical"
          android:weightSum="3">
          <TextView
            style="@style/tvGraficas"
            android:text="42 Fields" />
          <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/graficaazul" />
          <TextView
            style="@style/tvGraficas"
            android:layout_gravity="center"
            android:text="High" />
        </LinearLayout>

      </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
  </androidx.cardview.widget.CardView>
</LinearLayout>